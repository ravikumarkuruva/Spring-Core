package com.app.runners;



import java.util.Arrays;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.stereotype.Component;

import com.app.runners.entity.Product;
import com.app.runners.repo.ProductRepositary;
@Component
public class Runner implements CommandLineRunner {
	
	@Autowired
	private ProductRepositary repo;
	
	@Override
	public void run(String... args) throws Exception {
		
		repo.saveAll(
				Arrays.asList(
						new Product(101,"Shirt","KNL",5,1000.0),
						new Product(102,"Pant","HYD",18,1000.0),
						new Product(103,"Short","CHENNAI",5,1000.0),
						new Product(104,"T-Shirt","BANG",6,1000.0),
						new Product(105,"Trouser","KNL",3,1000.0),
						new Product(106,"PencilCut","KERALA",4,1000.0),
						new Product(107,"Hoodie","DHONE",2,1000.0),
						new Product(108,"Ancle","KADAPA",3,1000.0)
						)
				);
		
	}

}
